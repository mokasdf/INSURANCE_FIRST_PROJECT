@model INSURANCE_FIRST_PROJECT.Models.Testimonial

@{
    ViewData["Title"] = "Add Testimonial";
    Layout = "_UserLayout";
}


<div class="content-wrapper">
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h1>ADD Testimonial</h1>

                            <h4>Testimonial</h4>
                            <hr />
                            <div class="row">
                                <div class="col-md-12">
                                    <form method="post" asp-action="Testimonial">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Useraccountid" value=@ViewBag.userid />
                                        <input type="hidden" asp-for="Id"  />

                                        <div class="form-group">
                                            <label asp-for="Message" class="control-label"></label>
                                            <input asp-for="Message" type="text" class="form-control" />
                                            <span asp-validation-for="Message" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <input type="submit" value="Add Testimonial" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div>
                                <a asp-controller="User" asp-action="Index">Back to home page</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>