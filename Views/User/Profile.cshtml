@model INSURANCE_FIRST_PROJECT.Models.Useraccount
@{
    Layout = "_UserLayout";
}

<div class="content-wrapper">


    <div class="container">
        <div class="main-body">


            <div class="row gutters-sm">
                <div class="col-md-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                @* <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150"> *@
                                <img src="@Url.Content("~/imgs/" + Model.Image )" asp-append-version="true" class="rounded-circle" width="200" />
                                <div class="mt-3">
                                    <h2>@Model.Fullname</h2>

                                    <p style="margin-bottom:5px;" class="text-muted font-size-sm">@Model.Email</p>

                                    <a asp-controller="User" asp-action="EditProfile" asp-route-id="@Model?.Id" class="btn btn-primary">Edit Info</a>
                                    <a asp-controller="User" asp-action="EditPassword" asp-route-id="@Model?.Id" class="btn btn-outline-primary">Change Password</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row gutters-sm" style="padding:50px;">
            </div>
        </div>
    </div>
</div>
