@model IEnumerable<INSURANCE_FIRST_PROJECT.Models.Beneficiary>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";

}

<div class="content-wrapper">


    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    <h1>Index</h1>

                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Document)

                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.State)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Relationtype)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Beneficiarystartdate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Extra)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Subcrebtion)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                    @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @* @Html.DisplayFor(modelItem => item.Document) *@
                                        <img src="@Url.Content("~/imgs/" + item.Document )" asp-append-version="true" width="100" height="100" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Relationtype)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Beneficiarystartdate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Extra)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Subcrebtion.Subcrebtiontype.Name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>