@{
    Layout = "_AdminLayout";
}

@* @model Tuple<IEnumerable<JoinTable>,IEnumerable<Subcrebtion>> *@
@model INSURANCE_FIRST_PROJECT.Models.Subcrebtion


<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                        @* extra features *@
                    <div class="row gutters-sm">

                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">

                                        <img src="@Url.Content("~/imgs/" + Model.Useraccount.Image )" asp-append-version="true" class="rounded-circle" width="150" />
                                        <div class="mt-3">
                                            <h4>@Model.Useraccount.Fullname</h4>

                                            <p class="text-muted font-size-sm">@Model.Useraccount.Email</p>
                                            <button class="btn btn-warning" onclick="alert.apply('Message are diabeled')">Message</button>
                                            @* <button class="btn btn-outline-primary">Change Password</button> *@
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h1>Subcrebtion</h1>
                                    <h3>Details</h3>
                                    <hr />

                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0"> @Html.DisplayNameFor(model => model.Subcrebtiondate)</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Subcrebtiondate)
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">@Html.DisplayNameFor(model => model.State)</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.State)
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">@Html.DisplayNameFor(model => model.Extra)</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Extra)
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">@Html.DisplayNameFor(model => model.Subcrebtiontype)</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Subcrebtiontype.Name)
                                        </div>
                                    </div>
                                    <hr>
                                    
                                    <div class="row">
                                        <div class="col-sm-12">
                                            @* <a class="btn btn-warning " asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>  *@
                                            <a class="btn btn-warning " asp-action="Index">Back to List</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    
                </div>

            </div>
        </div>
    </div>
</div>