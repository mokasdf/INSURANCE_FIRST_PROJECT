@{
    Layout = "_AdminLayout";
}

@model Tuple<IEnumerable<JoinTable>,IEnumerable<Subcrebtion>,IEnumerable<Useraccount>>
<div class="content-wrapper">


    <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users Details</h4>
                <p class="card-description">

                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    User
                                </th>
                                <th>
                                    Full name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item3)
                            {
                                @* if (item.useraccount.Role.Name == "Admin")
                                {
                                    continue;
                                } *@
                                <tr>
                                    <td class="py-1">
                                        @* <img src="../../images/faces/face1.jpg" alt="image"> *@
                                        <img src="@Url.Content("~/imgs/" + item.Image )" asp-append-version="true" class="rounded-circle" width="200" />

                                    </td>
                                    <td>
                                        @item.Fullname
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                            <a asp-action="Userdetails" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    

</div>

