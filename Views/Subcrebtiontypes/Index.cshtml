@model IEnumerable<INSURANCE_FIRST_PROJECT.Models.Subcrebtiontype>

@{
    ViewData["Title"] = "Index";
    Layout ="_AdminLayout";
}




<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1>Index</h1>

                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Maxnumberofbeneficiaries)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.subImage)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                    @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Maxnumberofbeneficiaries)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Text1)
                                </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text2)
                                    </td>
                                    <td>
                                        @* @Html.DisplayFor(modelItem => item.subImage) *@
                                        <img src="@Url.Content("~/imgs/" + item.Image )" asp-append-version="true" width="100" height="100" />
                                    </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                    }
                        </tbody>
                    </table>


                 </div>
            </div>
        </div>
    </div>
</div>
